{
    "name": "dsp.stdDevFreqAnalysis",
    "author": "Rodrigo Diez <rjdiez@mit.edu>",
    "documentation": "",
    "description": "Anomalies detection in satellite telemetry data using the standard deviation of the frequency components calculated using time-dependent Fast Fourier Transform",
    "modalities": [],
    "primitive": "mlprimitives.dsp.freqAnalysis",
    "fit": {
        "method": "fitFreqStdDev",        
        "args": [
            {
                "name": "X",
                "description": "training signal",
                "type": "ndarray"
            }
        ],
        "output": [
            {      
                "name": "mask",
                "descrtiption": "Mask used to detect anomalies in telemetry data",
                "type": "ndarray"
            }
        ]
    },

    "produce": {
        "method": "produceFreqCompare",
        "args": [
            {
                "name": "X",
                "description": "telemetry data vector",
                "type": "ndarray"
            }
        ],
        "output": [
            {
                
                "name": "anomalies",
                "descrtiption": "data vector consisting of anomalies detected in the input vector",
                "type": "ndarray"
            }
        ]
    },

    "hyperparameters": {
        "tunable": {
            "gain": {
                "description": "Gain value",
                "default": 5.5,
                "type": "float",
                "range": [0, 1000]            
            },
            "windowSize": {
                "description": "Size of the sliding window in number of samples",
                "default": 129,
                "type": "int",
                "range": [0, 1000]            
            },
            "beta": {
                "description": "Beta value for Kaiser window design",
                "default": 4,
                "type": "float",
                "range": [0, 100]            
            }
        }
     }
}
