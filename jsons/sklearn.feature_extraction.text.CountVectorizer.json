{
    "name": "sklearn.feature_extraction.text.CountVectorizer",
    "author": "Carles Sala <carles@pythiac.com>",
    "documentation": "http://scikit-learn.org/stable/modules/generated/sklearn.feature_extraction.text.CountVectorizer.html",
    "description": "Convert a collection of text documents to a matrix of token counts",
    "classifiers": {
        "type": "feature_extraction",
        "subtype": ""
    },
    "modalities": ["text"],
    "primitive": "sklearn.feature_extraction.text.CountVectorizer",
    "fit": {
        "method": "fit",
        "args": [
            {
                "name": "X",
                "type": "DataFrame"
            },
            {
                "name": "y",
                "type": "Series"
            }
        ]
    },
    "produce": {
        "method": "transform",
        "args": [
            {
                "name": "X",
                "type": "DataFrame"
            }
        ],
        "output": [
            {
                "name": "y",
                "type": "Series"
            }
        ]
    },
    "hyperparameters": {
        "FIXME": "This needs to be reviewed",
        "fixed": {
            "input": {
                "type": "str",
                "default": "content"
            },
            "encoding": {
                "type": "str",
                "default": "utf-8"
            },
            "decode_error": {
                "type": "str",
                "default": "strict"
            },
            "lowercase": {
                "type": "bool",
                "default": true
            },
            "ngram_range": {
                "type": "list",
                "default": [1, 1]
            },
            "analyzer": {
                "type": "str",
                "default": "word"
            },
            "binary": {
                "type": "bool",
                "default": false
            }
        },
        "tunable": {
            "max_features": {
                "type": "int",
                "default": 1000,
                "range": [
                    1000,
                    40000
                ]
            },
            "max_df": {
                "type": "float",
                "default": 0.99,
                "range": [
                    0.99,
                    1.0
                ]
            },
            "min_df": {
                "type": "float",
                "default": 0.0,
                "range": [
                    0.0,
                    0.01
                ]
            }
        }
    }
}
